<div><a href="<%= `/${process.env.ADMIN_PATH}` %>">Back</a></div>
<h1>Заполните поля для добавления нового продукта</h1>
<form action="<%= `add` %>" method="post" class="product-edit-form">
	<div class="product-edit-fields">
		<div class="field">
			<label for="item-title">Title:</label>
			<input
				required
				id="item-title"
				type="text"
				name="title"
				value=""
				placeholder="Type title"
			/>
		</div>

		<div class="field">
			<label for="item-description">Description:</label>
			<textarea
				id="item-description"
				rows="3"
				name="description"
				required
				placeholder="Type description"
			></textarea>
		</div>

		<div class="field">
			<label for="item-price">Price:</label>
			<input
				required
				id="item-price"
				type="text"
				name="price"
				value=""
				placeholder="Type price"
			/>
		</div>

		<div class="field">
			<label for="item-new-images"
				>New Images URLs (use line break or a comma):</label
			>
			<textarea id="item-new-images" rows="3" name="newImages"></textarea>
		</div>
	</div>

	<div class="product-edit-footer">
		<button type="submit">Add new product</button>
	</div>
</form>
